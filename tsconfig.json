{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist/strapi-plugin-page-builder",
    "target": "ES2019",
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
  },

  "include": [
    "./admin/**/*",
    "./server/**/*",
    "./strapi-admin.*",
    "./strapi-server.*",
    "./LICENSE.md",
    "./README.md"
  ],

  "exclude": [
    "**/node_modules/**/*",
    "./dist",
    "**/build/**/*",
    "**/*.test.ts"
  ]
}
